<preference-headers
    xmlns:android="http://schemas.android.com/apk/res/android">

    <header android:fragment="lv.id.evil.mana_maja.PreferenceWithHeaders$Prefs1Fragment"
        android:icon="@drawable/ic_connection_settings"
        android:title="Connection settings"
        android:summary="TCP settings of PLC." />

    <header android:fragment="lv.id.evil.mana_maja.PreferenceWithHeaders$Prefs2Fragment"
        android:icon="@drawable/ic_settings_display"
        android:title="Prefs 2"
        android:summary="Some other preferences you can see.">
        <!-- Arbitrary key/value pairs can be included with a header as
             arguments to its fragment. -->
        <extra android:name="someKey" android:value="someHeaderValue" />
    </header>

    <header android:icon="@drawable/ic_settings_display"
        android:title="Intent"
        android:summary="Launches an Intent.">
        <intent android:action="android.intent.action.VIEW"
            android:data="http://www.android.com" />
    </header>

</preference-headers>